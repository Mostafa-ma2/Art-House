@model UserEditViewModel

@{
    ViewData["Title"] = "ویرایش کاربر";
}


<div class="row bg-white p-10" style="border-radius:4px;margin-top:10px">
    <div class="col-md-4">
        <form asp-action="EditUser" method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="userId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="userId" value="" />
            <div class="form-group">
                <label class="control-label">جیمیل</label>
                <img src="~/ProfileImage/@Model.ProfileImg" alt="Alternate Text" />
                <input type="file" name="image" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">جیمیل</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نام کاربری</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">شماره تلفن</label>
                <input asp-for="PhoonNumber" class="form-control" />
                <span asp-validation-for="PhoonNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نام</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">فامیلی</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-account-title">
                <label for="password">درباره خود بنویسید :</label>
                <textarea asp-for="Bio" class="password-input text-left ckEditor" style="direction:ltr"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">رمز عبور</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تکرار رمز عبور</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ادمین</label>
                <input asp-for="IsAdmin" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary" />
                <div>
                    <a asp-action="Index">بازگشت</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @Html.RenderPartialAsync("_CkEditorPartial")
}