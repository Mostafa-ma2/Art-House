@model IEnumerable<User>
@{
    ViewData["Title"] = "لیست کاربران";
}

<div class="row" style="margin-top:10px">
    <div class="col-md-12">
        <div class="panel">
            <div class="table-responsive">
                <table class="table table-hover manage-u-table">
                    <thead>
                        <tr>
                            <th width="70" class="text-center">#</th>
                            <th class="text-center">نام کاربری</th>
                            <th class="text-center">نام نام خانوادگی</th>
                            <th class="text-center">جیمیل</th>
                            <th width="300">مدیریت کردن</th>
                        </tr>
                    </thead>
                    <tbody id="group-list">
                        @foreach (var item in Model)
                        {
                            <tr id="@item.Id">
                                <td class="text-center">@item.Id</td>
                                <td class="text-center">@item.UserName</td>
                                @if (item.LastName != null || item.FirstName != null)
                                {
                                    <td class="text-center">@item.FirstName @item.LastName</td>

                                }
                                else
                                {
                                    <td class="text-center">------------</td>
                                }
                                <td class="text-center">
                                    @item.Email
                                </td>
                                <td>
                                    <a type="button" href="/Admin/User/DeleteUser/@item.Id" class="btn btn-info btn-outline btn-circle btn-lg m-r-5">
                                        <i class="ti-trash"></i>
                                    </a>
                                    <a type="button" href="/Admin/User/EditUser/@item.Id" class="btn btn-info btn-outline btn-circle btn-lg m-r-5">
                                        <i class="ti-pencil-alt"></i>
                                    </a>
                                    <a type="button" href="/Admin/User/AddToRole/userId=@item.Id" class="btn btn-info btn-outline btn-circle btn-lg m-r-5">
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- delete Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="padding:10px">
            <input type="hidden" id="DeleteID" name="name" value="" />
            <label id="lal">

            </label>

            <br />
            <button style="width:100%;margin-top:10px" class="btn btn-success" id="btnDelete">حذف</button>
        </div>
    </div>
</div>


