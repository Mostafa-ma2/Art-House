@model UserEditViewModel

@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
    ViewData["Title"] = "ویرایش کاربر";
}


    <div class="row bg-white p-10" style="border-radius:4px;margin-top:10px">
        <form asp-action="EditUser" method="POST" enctype="multipart/form-data" style="padding: 15px;">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="userId" value="" />
            <div class="form-group" style="text-align:center">
                <img src="~/ProfileImage/@Model.ProfileImg" width="100" height="100" alt="Alternate Text" />
            </div>
            <div class="form-group">
                <label class="control-label">تصویر</label>
                <input type="file" name="image" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">جیمیل</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نام کاربری</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">شماره تلفن</label>
                <input asp-for="PhoonNumber" class="form-control" />
                <span asp-validation-for="PhoonNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نام</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">فامیلی</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-account-title">
                <label for="password">درباره خود بنویسید :</label>
                <textarea asp-for="Bio" class="password-input text-left ckEditor" style="direction:ltr"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" style="width:100%" class="btn btn-primary" />
                <div class="btn btn-danger">
                    <a asp-action="Index">بازگشت</a>
                </div>
            </div>
        </form>
    </div>

@section Scripts{
    @{await Html.RenderPartialAsync("_CkEditorPartial");}
}